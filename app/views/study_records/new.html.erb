<h1>学習記録を投稿</h1>

<% if @study_record.errors.any? %>
  <ul>
    <% @study_record.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @study_record do |f| %>
  <div>
    <%= f.hidden_field :user_id, value: @user.id %>
    <%= f.hidden_field :name, value: @user.username %>
  </div>
  <div>
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <div>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
      <%= tag.label { tag.check_box + tag.text } %>
    <% end %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
